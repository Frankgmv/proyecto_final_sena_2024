{
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "extends": "airbnb/base",
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": ["src", "node_modules"]
      }
    }
  },
  "rules": {
    "no-underscore-dangle": 0,
    "no-param-reassign": 0,
    "import/no-unresolved": 0,
    "eslint/no-assert": "off",
    "indent": ["error", 2, {
      "SwitchCase": 2,
      "IfStatement": 2,
      "TryStatement": 2
    }]

  }
}